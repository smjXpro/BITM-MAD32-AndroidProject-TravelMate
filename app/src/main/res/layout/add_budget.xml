<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/char_spacing">

    <EditText
        android:id="@+id/addBudgetEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/char_spacing"
        android:hint="Add budget"
        android:inputType="numberDecimal"
        android:textSize="@dimen/default_text_size" />

    <TextView
        android:id="@+id/errorTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/error_occured"
        android:textColor="@color/error_color"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addBtn"
            android:layout_width="64sp"
            android:layout_height="64sp"
            android:background="@drawable/add_button_colored"
            />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginLeft="@dimen/char_spacing"
            android:background="@drawable/cancel_colored"
             />
    </LinearLayout>
</LinearLayout>